/**index.wxss**/
@import "../templates/switch.wxss";
.sonar-header{
    font-size:56rpx;
    color:rgba(0,0,0,0.84);
    height:100rpx;
    line-height:100rpx;
    padding-left:30rpx;
    font-weight:bold;
}
.sonar-info{
    height:60rpx;
    font-size:30rpx;
    color:rgba(0,0,0,0.84);
    font-weight:bold;
    line-height:88rpx;
    display:flex;
    justify-content:space-between;
    padding: 0 30rpx;
}
.sonar-content{
    display:flex;
    flex-direction:column;
    margin:30rpx;
}
.sonar-image{
    width:190rpx;
    color:rgba(0,0,0,0.84);
    font-size:28rpx;
    text-align:center;
    position:relative;
}
.shadow-hide{
    display:none !important;
}
.sonar-shadow .icon{
    width:60rpx;
    height:60rpx;
    margin:0 auto;
}
.sonar-shadow{
    width:190rpx;
    height:190rpx;
    background-color:rgba(0,0,0,0.54);
    position:absolute;
    top:0;
    display:flex;
    flex-direction:column;
    justify-content:center;

}
.sonar-image image{
    width:190rpx;
    height:190rpx;
}
.image-list{
    display:flex;
    justify-content:space-between;
    margin-top:30rpx;
}
.success-btn{
    padding-left:30rpx;
    padding-right:30rpx;
    border-radius:8rpx;
    margin-top:50rpx;
}
.success-btn .btn-index{
    background-color:rgb(16,142,233);
    font-size:32rpx;
    line-height:90rpx;
    color:#fff;
    font-weight:bold;
}