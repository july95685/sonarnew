.comment-area{
  background-color: white;
}
.comment-header{
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.comment-header__group{
  display: flex;
  flex-direction: row;
}
.comment-header__group view{
  margin-left: 32rpx;
}
.comment-header__group view:first-child{
  margin-left: 0;
}
.comment-header__item{
  color: rgba(0, 0, 0, 0.54);
  font-size: 28rpx;
  position: relative;
  height: 88rpx;
  line-height: 88rpx;
}
.comment-header__item.active{
  color: #108ee9;
  font-weight: 500;
}
.comment-header__item.active::after{
  position: absolute;
  bottom: 0;
  z-index: 1;
  content: "";
  height: 6rpx;
	background-color: #108ee9;
  left: 0;
  right: 0;
}
.comment-body{
  /* padding-top: 20rpx;
   padding-bottom: 26rpx; */ 
   /* padding-top: 30rpx; */
}

.comment-item{
  display: flex;
  flex-direction: row;
  padding:30rpx;
}
.comment-item__avatar{
  width: 76rpx;
	height: 76rpx;
  border-radius: 38rpx;
  flex-shrink: 0;
}
.comment-item__header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.comment-item__con{
  padding-left: 20rpx;
  flex: 1;
}
.comment-item__title{
	font-size: 28rpx;
	font-weight: 500;
	color: rgba(0, 0, 0, 0.54);
  width: 0;
  flex: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.comment-item__like{
  font-size: 26rpx;
	color: rgba(0, 0, 0, 0.54);
  flex-shrink: 0;
}
.comment-item__like text{
  vertical-align: middle;
  margin-left: 4rpx;
}
.comment-item__desc{
  font-size: 32rpx;
	line-height: 1.6;
	color: rgba(0, 0, 0, 0.84);
  margin-top: 5rpx;
  word-break: break-all;
}
.comment-item__time{
  font-size: 24rpx;
	color: rgba(0, 0, 0, 0.54);
  line-height: 34rpx;
}
.comment-item__expand{
  width: 100%;
  height: 68rpx;
  background-color: #f8f8f8;
  line-height: 68rpx;
  font-size: 26rpx;
	color: #108ee9;
  padding-left: 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.comment-item__line{
  width: 12rpx;
	height: 32rpx;
	background-color: #108ee9;
  margin-top: 4rpx;
}
.comment-item--reply{
  padding-left: 0;
  padding-right: 0;
  padding-bottom: 0;
  padding-top: 20rpx;
}
.reply-body{
  margin-top: 20rpx;
  position: relative;
}
.reply-body::after{
  content: "";
  display: block;
  height: 1px;
  background-color: #e8e8e8;
  top: 0;
  left: 0;
  right: -30rpx;
  position: absolute;
  transform: scaleY(0.5);
}
.comment-hint{
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.34);
  text-align: center;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.comment-hint text{
  padding:0 30rpx;
}
.comment-hint view {
  flex: 1;
  height: 0;
  border-top: 1px dashed rgba(0, 0, 0, 0.24);
}
