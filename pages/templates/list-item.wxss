.list-item{
  background-color: white;
  margin-top: 20rpx;
}
.list-item__header{
  height: 96rpx;
  padding: 0 30rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  padding-right: 0;
}
.list-item__thumb{
  font-size: 0;
}
.list-item__thumb image{
  width: 100%;
  height: 360rpx;
}
.list-item__more{
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 30rpx;
}
.list-item__footer{
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
  height: 88rpx;
  padding: 0 30rpx;
  position: relative;
}
.list-item__footer::before{
  content: "";
  display: block;
  height: 1px;
  background-color: #e8e8e8;
  top: 0;
  left: 30rpx;
  right: 0;
  position: absolute;
  transform: scaleY(0.5);
}
.list-item__footer > .marker-item{
  margin-left: 20rpx;
}
.marker-item{
  font-size: 26rpx;
  color: #999999;
}
.list-item__body{
  padding: 16rpx 30rpx 30rpx 30rpx;
  position: relative;
}
.list-item__time{
  text-align: right;
  margin-bottom: 44rpx;
  line-height: 34rpx;
}
.list-item__time text{
  font-size: 12px;
	font-weight: 300;
	color: #999999;
}
.list-item__title{
  font-size: 36rpx;
	font-weight: 500;
	text-align: left;
	color: #000000;
}
.list-item__subtitle{
  font-size: 26rpx;
	color: #999999;
  line-height: 1.6;
}
.list-item__desc{
  font-size: 32rpx;
	color: #999999;
  line-height: 1.7;
}
.list-item__brandgroup{
  display: flex;
  flex-direction: row;
  width: 344rpx;
  justify-content: space-between;
  position: absolute;
  top: -64rpx;
}
.list-item__brandgroup image{
  	width: 128rpx;
	height: 128rpx;
	border-radius: 4rpx;
	background-color: #ffffff;
	box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.05);
	border: solid 1px #e8e8e8;
}
.list-item__brandgroup .icon-plus{
  margin-top: 84rpx;
}
.list-item__from > image{
  width: 36rpx;
	height: 36rpx;
	border-radius: 4rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.list-item__from > text{
  vertical-align: middle;
}
.emoji-desc{
  width: 44rpx;
  height: 44rpx;
  vertical-align: top;
}
.list-item__thumb--weiboimg image{
  height: 750rpx;
}
.list-item__thumb--weibovideo image{
  height: 480rpx;
}
.list-item__thumb--weibovideo{
  position: relative;
}
.list-item__thumb--weibovideo::after{
  content: "";
  width: 96rpx;
  height: 96rpx;
  display: block;
  background-image: url('data:image/png;base64,');  
  background-size: 96rpx 96rpx;
  position: absolute;
  pointer-events: none;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}